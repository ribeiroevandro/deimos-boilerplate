// ================================================== 
// Helpers
//
// 1. Center, horizontal and vertical 
// 2. Resets
// 3. Hidden 
// 4. Triangle    
// 5. Has Scrollbar   
// ==================================================

// --------------------------------------------------
// 1. Center, horizontal and vertical
// --------------------------------------------------

$center(arg = '', pos = '')
  if (pos == fixed)
    position fixed 
    
  else 
    position absolute  
  
  
  if (arg == top)
    top 50%
    transform translateY(-50%) 
    
  else if (arg == full)
    left 50%
    top 50%
    transform translate(-50%,-50%) 
    
  else
    left 50%
    transform translateX(-50%)

 
// --------------------------------------------------
// 2. Resets
// --------------------------------------------------

$reset(arg = '')
  
  if (arg == list) 
    list-style none
    margin 0
    padding-left 0
    
  if (arg == form)  
    background none
    border 0
    padding 0
  
 
// --------------------------------------------------
// 3. Hidden
// --------------------------------------------------

$hidden(arg = '')

  // Hidden Font
  if (arg == font)
    font-size 0
    text-indent -999em
 
  // Hidden on xs screens
  if (arg == xs)
    +below('xs')
      display none !important

  // Hidden on small screens
  if (arg == sm)
    +below('sm')
      display none !important

  // Hidden on medium screens
  if (arg == md)
    +below('md')
      display none !important

  // Hidden All
  if (arg == all)
    display none !important
    font-size 0 !important
    visibility hidden !important

  // Screen Reader Only
  if (arg == sr)
    border 0
    clip rect(0,0,0,0)
    height 1px
    margin -1px
    overflow hidden
    padding 0
    position absolute 
    top -999em
    width 1px


$visible(arg = '', type = block)

  // Visible on extra-small screens
  if (arg == xs) 
    +above('sm')
      display none !important
 
  // Visible on small screens
  if (arg == sm)
    display none !important
 
    +above('sm')
      display type !important


  // Visible on medium screens
  if (arg == md)
    display none !important

    +above('md')
      display type !important


  // Visible on large screens
  if (arg == lg)
    display none !important

    +above('lg')
      display type !important


// --------------------------------------------------
// 4. Triangles
// --------------------------------------------------
 
// 
// Default 
// Usage: $triangle(width, height, direction, color)
// ------------------------------------------------------------ 
    
$triangle($width = 10px, $height = 10px, $direction = 'bottom', $color = $gray-darker) 
  background none
  border-style solid
  height 0
  width 0

  // Styles for each direction
  // @stylint off
  directions = {
    top: {
      border-width: 0 ($width * .5) $height ($width * .5),
      border-color: transparent transparent $color transparent
    },
    topRight: {
      border-width: 0 $width $height 0,
      border-color: transparent $color transparent transparent
    },
    right: {
      border-width: ($height * .5) 0 ($height *.5) $width,
      border-color: transparent transparent transparent $color
    },
    bottomRight: {
      border-width: 0 0 $height $width,
      border-color: transparent transparent $color transparent
    },
    bottom: {
      border-width: $height ($width * .5) 0 ($width * .5),
      border-color: $color transparent transparent transparent
    },
    bottomLeft: {
      border-width: $width 0 0 $height,
      border-color: transparent transparent transparent $color
    },
    left: {
      border-width: ($height * .5) $width ($height * .5) 0,
      border-color: transparent $color transparent transparent
    },
    topLeft: {
      border-width: $height $width 0 0,
      border-color: $color transparent transparent transparent
    }
  } 

  // Mixin styles for passed direction
  styles = directions[$direction]
  {styles}
  // @stylint on
   
// 
// Line 
// Usage: $triangle-line(width, height, color-line, color-triangle, direction, position)  
// ------------------------------------------------------------ 

$triangle-line($width = '', $height = '', $color-line = '', $color-triangle = '', $direction = '', $position = '')  

  w = -($width / 2)   
    
  &:before,
  &:after 
    content ''
    position absolute  
     
    if ($position == 'left')
      left 0  
    
    else if ($position == 'right')
      right 0
     
    else
      left 50%
      margin-left w
    
    if ($direction == 'bottom')
      top 100% 

    else 
      bottom 100%
    
  &:before 
    $triangle($width, $height, $direction, $color-line) 
  
  &:after  
    $triangle(($width - 1.5), ($height - 2), $direction, $color-triangle) 
    margin-left (w + 2)
 

// --------------------------------------------------
// 5. Has Scrollbar
// --------------------------------------------------

$has-scrollbar(color = $white) 
  overflow-y auto
  
  &::-webkit-scrollbar  
    width $space-sm 
 
  &::-webkit-scrollbar-track 
    border-radius $space-sm  
    box-shadow inset 0 0 3px alpha(color, .8)   
 
  &::-webkit-scrollbar-thumb 
    border-radius $space-sm  
    box-shadow inset 0 0 5px alpha(color, .7)   